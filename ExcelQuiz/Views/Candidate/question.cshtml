<script type="text/javascript">
    var counter = 1;
    
    $(document).ready(function () {
        $("#questNumber").html('Question ' + counter);
        $('#yesNo').css('display', 'block');
        $('#mcqSs').css('display', 'none');
        $('#mcqMs').css('display', 'none');
        $("#btnPrev").attr('disabled', 'disabled');
        $('input:button').click(function () {
            
            var randomnumber = Math.floor(Math.random() * 4) + 2;
            var val = $(this).val();
            if(val== 'Next')
                counter++;
            if(val== 'Previous')
               counter--;

             $("#questNumber").html('Question ' + counter);

             if (counter == 1) 
                 $("#btnPrev").attr('disabled', 'disabled');
             if (counter == 2) 
                 $("#btnPrev").removeAttr('disabled');
             if (counter == 20)
                   $("#btnNext").val('Submit');
             if (counter == 19)
                 $("#btnNext").val('Next');

            if (counter%3 == 1) {
                $('#mcqSs').css('display', 'block');
                $('#yesNo').css('display', 'none');
                $('#mcqMs').css('display', 'none');
                showHideOptions(randomnumber, 'mcqSs');
            }
            else if (counter%3 == 2) {
                 $('#mcqMs').css('display', 'block');
                 $('#yesNo').css('display', 'none');
                $('#mcqSs').css('display', 'none');
                showHideOptions(randomnumber, 'mcqMs');
            }
            else
            {
                $('#yesNo').css('display', 'block');
                $('#mcqSs').css('display', 'none');
                $('#mcqMs').css('display', 'none');
            }

        });
            
        function showHideOptions(number, optionTypeId) {
            for (var num = 1; num <= 6; num++) {

                if (num <= parseInt(number))
                    $('#' + optionTypeId + '_opt' + num).css('display', 'block');
                else
                    $('#' + optionTypeId + '_opt' + num).css('display', 'none');
            }
        }
    });
</script>
