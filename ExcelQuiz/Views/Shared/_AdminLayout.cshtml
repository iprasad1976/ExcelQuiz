<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="~/Content/style.css">
    <script type="text/javascript">
        $(document).ready(function () {
            $("#leftmenu li").click(function () {
                var val = $(this).html();
                var action = '';
                if (val == 'Candidate Management')
                    action = 'index';
                if (val == 'Quiz Management')
                    action = 'quiz';
                if (val == 'Question Management')
                    action = 'question';

                window.location = action;

            });

        });
    </script>
</head>
<body>
    <div class="header">
        <div class="row">
            <div class="col-3 col-s-3"><img src="~/Content/images/logo.jpg" /></div>
            <div class="col-7 col-s-8"><h1 text>Excel Quiz</h1></div>
            <div class="col-2 col-2-12 linkmenu">
                <ul>
                    <li>
                        @Html.ActionLink("Admin Login", "Login", "Admin")
                    </li>
                    <li>
                        @Html.ActionLink("Candidate Login", "Login", "Candidate")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row" id="leftmenu">
         <div class="col-3 col-s-3 menu">
            <ul>
                <li>Candidate Management</li>
                <li>Quiz Management</li>
                <li>Question Management</li>
            </ul>
        </div>
        <div class="col-9 col-s-9 body-content">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <p>&copy; @DateTime.Now.Year - Excel Quiz</p>
    </div>

 
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

